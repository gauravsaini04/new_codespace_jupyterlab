{
    "name": "Only Jupyter",
    "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
    "hostRequirements": {
      "cpus": 4
    },
    "features": {
      "ghcr.io/devcontainers/features/python": {
        "version": "3.10",
        "installTools": "false",
        "username": "vscode",
        "installJupyterlab": true,
        "configureJupyterlabAllowOrigin": "*"
      }
    },
    "remoteEnv": { "PATH": "${containerEnv:PATH}:${remoteEnv:HOME}/.local/bin" }
}
