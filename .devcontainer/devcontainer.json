{
    "name": "Only Jupyter",
    "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
    "hostRequirements": {
      "cpus": 4
    },
    "features": {
      "ghcr.io/devcontainers/features/python": {
        "version": "3.10",
        "installTools": "false",
        "username": "vscode",
        "installJupyterlab": true,
        "configureJupyterlabAllowOrigin": "*"
      }
    },
    "initializeCommand": "echo 'export PATH=$HOME/.local/bin:$PATH' >> /etc/profile.d/custom_path.sh",
    "containerEnv": { "PATH" : "${localEnv: PATH}" }
}
